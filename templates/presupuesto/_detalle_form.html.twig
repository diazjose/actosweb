<form method="post" action="{{ path('presupuestoDetalle_new') }}">

    <input type="hidden" name="_token" value="{{ csrf_token('new' ~ id) }}">
    <input type="hidden" name="id" value="{{ id }}">

    <div class="form-group">
        <label for="concepto">Detalle</label>
         <select id="concepto" class="form-control" name="detalle">
            {% for d in detalles %}
                <option value="{{d.id}}" >{{d.nombre}}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-sm float-right btn-outline-success mx-2">Guardar Cambio</button>
        <button type="button" class="btn btn-sm float-right btn-outline-secondary" data-dismiss="modal">Cerrar</button>
    </div>

</form>