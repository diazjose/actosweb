<form method="post" action="{{ path('caja_pago') }}">

    <input type="hidden" name="_token" value="{{ csrf_token('new') }}">
    <input type="hidden" name="id" value="{{acto}}">
    <div class="form-group">
        <label for="nombre">Monto</label>
        <input type="number" class="form-control" name="monto" id="monto">
    </div>
    

    <div class="form-group">
        <label for="concepto">Concepto</label>
         <select id="concepto" class="form-control" name="concepto">
            {% for con in conceptos %}
                {% if con.nombre == 'ENTRADA'%}
                <option value="{{con.id}}" >{{con.nombre}}</option>
                {% endif %}
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label for="tipoPago">Tipo de Pago</label>
         <select id="tipoPago" class="form-control" name="tipoPago">
            {% for t in tipos %}
                <option value="{{t.id}}" >{{t.nombre}}</option>
            {% endfor %}
        </select>
    </div>
    <hr>
    <div class="form-group">
        <button type="submit" class="btn btn-sm float-right btn-outline-info mx-2">Guardar Cambio</button>
    </div>

</form>