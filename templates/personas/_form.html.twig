{% set current_path = app.request.get('_route') %}
{{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.apellidos) }}    
        </div>
        <div class="col-md-6">
            {{ form_row(form.nombre) }}      
        </div>
    </div>   
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.fechaNac) }}    
        </div>
        <div class="col-md-4">
            {{ form_row(form.dni) }}      
        </div>
        <div class="col-md-4">
            {{ form_row(form.cuil) }}    
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.estadoCivil) }}      
        </div>
        <div class="col-md-4">
            {{ form_row(form.nacionalidad) }}    
        </div>
        <div class="col-md-4">
            {{ form_row(form.email) }}    
        </div>
    </div>  
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.domicilio) }}    
        </div>
        <div class="col-md-6">
            {{ form_row(form.telephone) }}    
        </div>
    </div>     
    <hr>
    {% if current_path == 'persona_new' %}
    <button class="btn btn-sm float-right btn-outline-primary">Guardar cambios</button>
    {% else %}
    <button class="btn btn-sm float-right btn-outline-success">Guardar cambios</button>
    {% endif %}
{{ form_end(form) }}