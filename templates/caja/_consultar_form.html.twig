<form method="post" action="{{ path('caja_consultas') }}">

    <input type="hidden" name="_token" value="{{ csrf_token('consultar') }}">

    <div class="form-group">
        <label for="nombre">Desde</label>
        <input type="date" class="form-control" name="fechaIni" id="fechaIni">
    </div>
    <div class="form-group">
        <label for="nombre">Hasta</label>
        <input type="date" class="form-control" name="fechaFin" id="fechaFin">
    </div>

    <div class="form-group">
        <label for="concepto">Concepto</label>
         <select id="concepto" class="form-control" name="concepto">
            <option value="" >TODOS</option>
            {% for con in conceptos %}
            <option value="{{con.id}}" >{{con.nombre}}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label for="concepto">Tipo de Pago</label>
         <select id="tipoPago" class="form-control" name="tipoPago">
            <option value="" >TODOS</option>
            {% for t in tipos %}
            <option value="{{t.id}}" >{{t.nombre}}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-sm float-right btn-outline-success mx-2"><i class="fas fa-search"></i> Buscar</button>
    </div>

</form>